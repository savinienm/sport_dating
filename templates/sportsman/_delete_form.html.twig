<form method="post" action="{{ path('sportsman_delete', {'ID': sportsman.ID}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sportsman.ID) }}">
    <button class="btn">Delete</button>
</form>
