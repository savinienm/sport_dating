{% extends 'base.html.twig' %}

{% block title %}Sportsman index{% endblock %}

{% block body %}
    <h1>Sportsman index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>County</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sportsman in sportsmen %}
            <tr>
                <td>{{ sportsman.ID }}</td>
                <td>{{ sportsman.Nom }}</td>
                <td>{{ sportsman.Prenom }}</td>
                <td>{{ sportsman.Departement }}</td>
                <td>{{ sportsman.Email }}</td>
                <td>
                    <a href="{{ path('sportsman_show', {'ID': sportsman.ID}) }}">show</a>
                    <a href="{{ path('sportsman_edit', {'ID': sportsman.ID}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sportsman_new') }}">Create new</a>
{% endblock %}
